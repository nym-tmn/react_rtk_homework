{
	"compilerOptions": {
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": "./src",
		"paths": {
			"@components": ["./components"],
			"@components/*": ["./components/*"],
			"@assets": ["./assets"],
			"@assets/*": ["./assets/*"],
			"@layouts": ["./layouts"],
			"@layouts/*": ["./layouts/*"],
			"@pages": ["./pages"],
			"@pages/*": ["./pages/*"],
			"@api": ["./api"],
			"@api/*": ["./api/*"],
			"@types": ["./types"],
			"@types/*": ["./types/*"],
			"@hooks": ["./hooks"],
			"@hooks/*": ["./hooks/*"],
			"@providers": ["./providers"],
			"@providers/*": ["./providers/*"],
			"@context": ["./context"],
			"@context/*": ["./context/*"],
			"@store": ["./store"],
			"@store/*": ["./store/*"],
		}
	},
	"include": [
		"src"
	],
}